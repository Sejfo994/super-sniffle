@model Inventory
@{
    ViewData["Title"] = "DeleteItem";
}

<h1>DeleteItem</h1>

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete an Item.</h2>
            <hr>
        </div>
        <div> 
            <label asp-for="ItemName"></label>
            <input asp-for="ItemName" disabled class="form-control"/>
        </div>
        <div>
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div>
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" disabled class="form-control" />
        </div>
        <div>
            <label asp-for="Power"></label>
            <input asp-for="Power" disabled class="form-control" />
        </div>
        <div>
            <label asp-for="MRP"></label>
            <input asp-for="MRP" disabled class="form-control" />
        </div>
        <div>
            <label asp-for="WHOL"></label>
            <input asp-for="WHOL" disabled class="form-control" />
        </div>
        <br>
        <div>
            <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            <a asp-controller="Inventory" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
        </div>
    </div>
</form>
